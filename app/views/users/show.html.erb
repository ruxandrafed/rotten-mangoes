<%= link_to "Back to all users", users_path %><br/>

<h2>User full name: <%= link_to @user.full_name, user_path(@user) %></h2>
<p>Email: <%= @user.email %></td></p>
<p>Created at: <%= formatted_date(@user.created_at) %></p>
<p>Updated at: <%= formatted_date(@user.updated_at) %></p>


<h3>Reviews posted by <em><%= link_to @user.full_name, user_path(@user) %></em></h3>

<% if !current_user.reviews.empty? %>
  <%= render partial: "reviews/review", collection: @user.reviews %>
<% else %>
  <h4>This user hasn't posted any reviews.</h4>
<% end %>
