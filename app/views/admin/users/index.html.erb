<div class="container">
  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <div class="page-header">
    <h1>All users on Rotten Mangoes</h1>
  </div>

  <table class="table">
    <tr>
      <th align="left">User name</th>
      <th align="left">Email</th>
      <th align="left">Created on</th>
      <th align="left">Updated on</th>
      <th align="left">Switch to user mode</th>
      <th align="left">Admin</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.full_name, admin_user_path(user) %></td>
      <td><%= user.email %></td>
      <td><%= formatted_date(user.created_at) %></td>
      <td><%= formatted_date(user.updated_at) %></td>
      <td><%= link_to 'Switch to user mode', impersonate_admin_session_path(user) %></td>
      <td><%= user.admin? %></td>
    </tr>
    <% end %>
  </table>
  <br>
  <%= paginate @users %><hr>

<div>

<%= link_to "Add a new user!", new_admin_user_path %>
</div>
