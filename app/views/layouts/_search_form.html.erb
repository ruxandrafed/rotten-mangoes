<%= form_tag("/movies", method: "get") do %>
  <p>
    <%= label_tag(:title, "Search by title:") %>
    <%= text_field_tag(:title) %>
  </p>
  <p><%= label_tag(:director, "Search by director:") %>
  <%= text_field_tag(:director) %></p>
  <p><%= label_tag(:duration, "Search by duration:") %>
  <%= select_tag(:duration, options_for_select([['All', 1], ['Under 90 minutes', 2], ['Between 90 and 120 minutes', 3], ['Over 120 minutes', 4]])) %></p>
  <%= submit_tag("Search") %>
  <%= button_tag "Reset", type: :reset %>
<% end %>
