          <ul class="nav navbar-nav navbar-right">
            <form class="navbar-form navbar-right" role="search">
              <%= render 'layouts/search_form_v2' %>
            </form>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

  <% flash.each do |key, value| %>
    <%= content_tag(:div, value) %>
  <% end %>

<%= yield %>

<%= render 'layouts/footer' %>

</body>
</html>
