<h4><% if request.fullpath.start_with?('/users') %>
  <%= link_to review.movie.title, movie_path(review.movie) %>: <%= review.rating_out_of_ten %>/10</h4>
<% else %>
  Rating: <%= review.rating_out_of_ten %>/10</h4>
<% end %>
<p><em><%= review.text %></em>
<% if request.fullpath.start_with?('/movies') %>
  - <%= link_to review.user.full_name, user_path(review.user) %></p>
  <% if review.user_id == current_user.id %>
  (<%= link_to "edit", edit_movie_review_path(movie_id: review.movie.id, id: review.id) %>, <%= link_to "delete", movie_review_path(movie_id: review.movie.id, id: review.id), method: :delete, confirm: "You sure?" %>)
  <% end %>
  <br>
<% end %>
