<% if request.fullpath == "/" || request.fullpath == "" %>
<!-- Main jumbotron for homepage -->
<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-lg-9">
        <h1>Hi there!</h1>
        <p class="hp-text">Join our community of movie lovers and never miss another release.<br>
        Rotten Mangoes is your best option for accurate information about movies.</p>
        <p><a class="btn btn-primary btn-lg" href="/movies" role="button">Browse movies &raquo;</a></p>
      </div>
      <div class="col-lg-3">
        <span class="glyphicon glyphicon-facetime-video" aria-hidden="true"></span>
      </div>
    </div>
  </div>
</div>
<% end %>

<!-- Begin page content -->
<div class="container">
  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <% unless request.fullpath == "/" || request.fullpath == "" %>
  <div class="page-header">
    <h1>All movies:</h1>
  </div>
  <% end %>
  <p class="lead">Listing of all movies currently in the database.</p>
  <% if !@movies.empty? %>
  <div class="container">
    <%= render @movies %>
  </div>
  <% else %>
  <div class="container">
    <h4>No movie matches your criteria.</h4>
  </div>
  <% end %>
</div>
