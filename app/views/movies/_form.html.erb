<%= form_for @movie, :html => {:multipart => true} do |f| %>
  <% if @movie.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
    </div>
    <div class="container">
      <ul class="list-group">
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-lg-4">
    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :release_date %><br>
        <%= f.date_select :release_date, :html => {:class => "form-control"} %>
    </div>
    <div class="form-group">
      <%= f.label :director %><br>
      <%= f.text_field :director, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :runtime_in_minutes, 'Movie duration' %><br>
      <div class="input-group">
        <%= f.number_field :runtime_in_minutes, :class => "form-control" %>
        <span class="input-group-addon">minutes</span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :poster_image_url %><br>
      <%= f.file_field :poster_image_url %>
    </div>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", :class => "btn btn-default" %>
    </div>
  </div>
</div>
  <% end %>
